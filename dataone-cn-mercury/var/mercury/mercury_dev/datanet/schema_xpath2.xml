<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ornldaac" class="index_utils.SimpleListBean">
     <property name="list">
      <list>
        <value>TEXT</value>
        <value>GEO</value>
        <value>DATE</value>
        <value>CSV</value>
        <value>TEXT_SINGLE</value>
        <value>LOOKUP</value>
      </list>
    </property>
  </bean>

<bean id="instance" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
        <entry key="instance" 			value = "ornldaac"/>
 	</map>
    </property>
  </bean>
  
  <bean id="TEXT_SINGLE" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
         <entry key="abstract" 	value = "//metadata/idinfo/descript/abstract/text()"/>
         <entry key="title" 		value = "//metadata/idinfo/citation/citeinfo/title/text()"/>
         <entry key="web_url" 		value = "//metadata/idinfo/citation/citeinfo/onlink/text()"/>
          <entry key="data_url" 		value = "//metadata/idinfo/distinfo/digopt/onlinopt/computer/networka/networkr/text()"/>
       	<entry key="contactOrganization" 		value = "//metadata/distinfo/distrib/cntinfo/cntperp/cntorg/text()"/>
        <entry key="ogc_url" 					value = "//metadata/mercury/OGC_URL/text()"/>
       	<entry key="LTERSite" 					value = "//metadata/mercury/LTER-Site/text()"/>
  	</map>
    </property>
  </bean>
  
  
 <bean id="TEXT" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
         <entry key="origin" 		value = "//metadata/idinfo/citation/citeinfo/origin/text()"/>
       	<entry key="edition" 		value = "//metadata/idinfo/citeinfo/edition/text()"/>
       	<entry key="geoform" 		value = "//metadata/idinfo/citeinfo/geoform/text()"/>
      	<entry key="investigator" 	value = "//metadata/mercury/Principal_Investigator/Name/text()"/>
       	<entry key="parameter" 		value = "//metadata/mercury/Parameter_Description/Parameter/text()"/>
      	<entry key="project" 		value = "//metadata/mercury/Project/text()"/>
      	<entry key="purpose" 		value = "//metadata/idinfo/descript/Purpose/text()"/>
      	<entry key="sensor" 		value = "//metadata/mercury/Parameter_Description/Sensor/text()"/>
      	<entry key="source" 		value = "//metadata/mercury/Parameter_Description/Source/text()"/>
      	<entry key="site" 			value = "//metadata/mercury/Site_Information/Site/text()"/>
      	<entry key="term" 			value = "//metadata/mercury/Parameter_Description/Term/text()"/>
      	<entry key="topic" 			value = "//metadata/mercury/Parameter_Description/Topic/text()"/>
        
  	</map>
    </property>
  </bean>

<bean id="GEO" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
      	  <entry key="eastbc" 		value = "//metadata/idinfo/spdom/bounding/eastbc/text()"/>
          <entry key="northbc" 		value = "//metadata/idinfo/spdom/bounding/northbc/text()"/>
          <entry key="southbc" 		value = "//metadata/idinfo/spdom/bounding/southbc/text()"/>
         <entry key="westbc" 		value = "//metadata/idinfo/spdom/bounding/westbc/text()"/>
 	</map>
    </property>
  </bean>
  
<bean id="DATE" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
      	  <entry key="begdate" 		value = "//metadata/mercury/begdate/text()"/>
          <entry key="enddate" 		value = "//metadata/mercury/enddate/text()"/>
          <entry key="pubDate" 		value = "//metadata/idinfo/citation/citeinfo/pubdate/text()"/>
 	</map>
    </property>
  </bean>  
 
 <bean id="CSV" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
          <entry key="keywords" 	value = "//metadata/mercury/Keywords/text()"/>
          <entry key="gcmdkeyword" 	value = "//metadata/idinfo/keywords/theme[themekt[contains(.,'(GCMD) Science Keywords')]]/themekey/text()"/>
 		  <entry key="placeKey" 		value = "//metadata/idinfo/keywords/place/placekey/text()"/>			
   	</map>
    </property>
  </bean>   

 <bean id="CSV2" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
       	<entry key="themekt" 					value = "//metadata/idinfo/keywords/theme/themekt/text()"/>
      	<entry key="themekey" 					value = "//metadata/idinfo/keywords/theme/themekey/text()"/>
      	<entry key="placekt" 					value = "//metadata/idinfo/keywords/place/placekt/text()"/>
      	<entry key="placekey" 					value = "//metadata/idinfo/keywords/place/placekey/text()"/>
        <entry key="placekeyword" 				value = "//metadata/idinfo/keywords/place[placekt[contains(.,'(GCMD) Location Keywords')]]/placekey/text()"/>
        <entry key="temporalkeyword" 			value = "//metadata/idinfo/keywords/temporal[tempkt[contains(.,'(GCMD) Temporal Keywords')]]/tempkey/text()"/>
        <entry key="pointOfContact" 			value = "//metadata/idinfo/ptcontac/cntinfo/cntorgp/cntorg/text()"/>
        <entry key="supplinf" 					value = "//metadata/idinfo/descript/supplinf/text()"/>
        <entry key="contactPerson" 				value = "//metadata/distinfo/distrib/cntinfo/cntperp/cntper/text()"/>
        <entry key="pubDate" 		value = "//metadata/idinfo/citation/citeinfo/pubdate/text()"/>
  	</map>
     </property>
  </bean>   

<bean id="LOOKUP" class="index_utils.SimpleMapBean">
     <property name="simpleMap">
      <map>
      	  <entry key="presentationCat" 		value = "//metadata/idinfo/citation/citeinfo/geoform/text()"/>
          <entry key="originator" 			value = "//metadata/idinfo/citation/citeinfo/origin/text()"/>
 	</map>
    </property>
  </bean>  

<bean id="presentationCat" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
	<property name="location" value="/lookup_test.properties" />
</bean>	

<bean id="originator" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
	<property name="location" value="/originator_test.properties" />
</bean>	
  
  
</beans>